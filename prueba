int moda(int pre, char mat[][71],int r, int c,int &cont)
{
	fstream archi("c:\\datos\\pi1.txt",ios::in);
	for(r=0;r<290;r++)
	{
		for(c=0;c<70;c++)
		{
			archi>>mat[r][c];
			
		}
	}

	switch(pre)
	{
		case 1:
			for(r=0;r<290;r++)
			{
				if(mat[r][0]=='a')
				{
					cont++;
				}
			}
			return cont;
		break;
		case 2:
			for(r=0;r<290;r++)
			{
				if(mat[r][8]=='b')
				{
					cont++;
				}
			}
			return cont;
		break;
		case 3:
			for(r=0;r<290;r++)
			{
				if(mat[r][11]=='c')
				{
					cont++;
				}
			}
			return cont;
		break;
	}
	archi.close();
}
